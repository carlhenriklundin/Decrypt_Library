<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Decrypt_Library.SelectedEventView"
             BackgroundImageSource="darkbackground.jpg">
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding EventName}" FontSize="Large" TextColor="#DDC6B6"/>
            <Label Text="{Binding Time}" FontAttributes="Bold" TextColor="#DDC6B6"/>
            <Label Text="{Binding Description}" TextColor="#DDC6B6"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>